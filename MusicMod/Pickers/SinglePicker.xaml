<local:Picker x:Class="Pickers.SinglePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Pickers"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <controls:Aligner x:Name="aligner"
                          VerticalAlignment="Center"
                          Alignment="{Binding Alignment, RelativeSource={RelativeSource AncestorType=local:SinglePicker}}"
                          MaxChildWidth="160"
                          Visibility="{Binding ValueWrapper, Converter={StaticResource ShowIfNullConverter}}">
            <controls:Aligner.Child>
                <Menu x:Name="menu">
                    <MenuItem Header="Select...">
                        <MenuItem Header
                    </MenuItem>
                </Menu>
            </controls:Aligner.Child>
        </controls:Aligner>
        <controls:ValueContainer x:Name="valueContainer" DataContext="{Binding SelectedItem}" Visibility="{Binding Converter={StaticResource CollapseIfNullConverter}}" Margin="2" />
    </Grid>
</local:Picker >