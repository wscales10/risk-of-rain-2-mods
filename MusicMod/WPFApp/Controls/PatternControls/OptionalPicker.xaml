<local:Picker x:Class="WPFApp.Controls.PatternControls.OptionalPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFApp.Controls.PatternControls" xmlns:commandcontrols="clr-namespace:WPFApp.Controls.CommandControls"
			 mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:OptionalPickerViewModel}">
    <Grid>
        <commandcontrols:DiscreteComboBox VerticalAlignment="Center" MaxWidth="160" Grid.Row="1" x:Name="comboBox" Margin="0 0 0 5" Alignment="Center" />
        <local:ValueContainer x:Name="valueContainer" Visibility="Collapsed" Margin="2" DataContext="{Binding ValueWrapper}" />
    </Grid>
</local:Picker>