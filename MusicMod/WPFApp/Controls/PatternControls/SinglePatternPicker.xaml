<local:PatternPicker x:Class="WPFApp.Controls.PatternControls.SinglePatternPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFApp.Controls.PatternControls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="200">
	<Grid>
		<ComboBox x:Name="comboBox"
				  VerticalAlignment="Center"
				  HorizontalAlignment="Center"
				  Width="160" />
		<local:PatternContainer x:Name="patternContainer" Visibility="Collapsed" Margin="2" />
	</Grid>
</local:PatternPicker>