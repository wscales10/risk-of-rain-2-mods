<UserControl x:Class="WPFApp.Controls.PatternControls.ScenePatternControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFApp.Controls.PatternControls"
			 xmlns:behaviors="clr-namespace:WPFTextBoxAutoComplete;assembly=WPFTextBoxAutoComplete"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Image x:Name="image"
			   Margin="4 4 4 2" />
		<TextBox x:Name="textBox"
				 Grid.Row="1"
				 TextAlignment="Center"
				 FontSize="14"
				 Margin="4 2 4 2"
				 LostFocus="textBox_LostFocus"
				 behaviors:AutoCompleteBehavior.AutoCompleteItemsSource="{Binding Source={x:Static local:ScenePatternControl.SceneNames}}"
				 behaviors:AutoCompleteBehavior.AutoCompleteStringComparison="InvariantCultureIgnoreCase" />
	</Grid>
</UserControl>