<local:PatternPicker x:Class="WPFApp.Controls.PatternControls.NewPatternPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFApp.Controls.PatternControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Grid.Row="1" Orientation="Vertical">
		<ComboBox x:Name="newPatternTypeComboBox" Margin="10 10 10 5"></ComboBox>
		<Button Margin="10 5 10 10" Height="60" HorizontalAlignment="Center" MinWidth="75" x:Name="AddPatternButton" Click="AddPatternButton_Click">Add Pattern</Button>
	</StackPanel>
</local:PatternPicker>
