<local:Picker x:Class="WPFApp.Controls.Pickers.SinglePicker"
              xmlns:controls="clr-namespace:WPFApp.Controls"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:local="clr-namespace:WPFApp.Controls.Pickers"
              xmlns:converters="clr-namespace:WPFApp.Converters"
              xmlns:pickers="clr-namespace:WPFApp.ViewModels.Pickers"
              mc:Ignorable="d"
              d:DesignHeight="200" d:DesignWidth="200"
              d:DataContext="{d:DesignInstance Type=pickers:SinglePickerViewModel}">
    <Grid>
        <!--<Border x:Name="aligner"
                VerticalAlignment="Center"
                Visibility="{Binding ValueWrapper, Converter={StaticResource ComboBoxConverter}}">
            <ComboBox Style="{DynamicResource ComboBoxStyle1}" MaxWidth="160" />
        </Border>-->
        <controls:Aligner x:Name="aligner"
                          VerticalAlignment="Center"
                          Alignment="{Binding Alignment, RelativeSource={RelativeSource AncestorType=local:SinglePicker}}"
                          MaxChildWidth="160"
                          Visibility="{Binding ValueWrapper, Converter={StaticResource ShowIfNullConverter}}">
            <controls:Aligner.Child>
                <Menu x:Name="menu">
                    <MenuItem Header="Select...">
                        <MenuItem Header
                    </MenuItem>
                </Menu>
            </controls:Aligner.Child>
        </controls:Aligner>
        <controls:ValueContainer x:Name="valueContainer" DataContext="{Binding SelectedItem}" Visibility="{Binding Converter={StaticResource CollapseIfNullConverter}}" Margin="2" />
    </Grid>
</local:Picker>