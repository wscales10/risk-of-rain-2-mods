<UserControl x:Class="WPFApp.Controls.SpotifyItemPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFApp.Controls"
             mc:Ignorable="d"
             d:DesignHeight="56" d:DesignWidth="637">
	<Border x:Name="border" BorderThickness="1" CornerRadius="3" Background="#2A2A2A" AllowDrop="True" PreviewDrop="Border_PreviewDrop" VerticalAlignment="Center">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="58" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition Height="26" />
			</Grid.RowDefinitions>
			<Image Grid.RowSpan="2" Margin="9 8" x:Name="image" />
			<Label Grid.Column="1" Foreground="#1ed15e" x:Name="nameLabel" FontSize="15" VerticalContentAlignment="Bottom" Padding="7 0" Margin="0 0 10 0" />
			<StackPanel Grid.Column="1" Grid.Row ="1" x:Name="infoPanel" Orientation="Horizontal" Margin="8 0 18 0" />
		</Grid>
	</Border>
</UserControl>