<UserControl x:Class="WPFApp.Controls.RuleControls.NewRuleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFApp.Controls.RuleControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Grid.Row="1" Orientation="Vertical" Width="200">
		<ComboBox x:Name="newRuleTypeComboBox" Margin="10 10 10 5"></ComboBox>
		<Button Margin="10 5 10 10" Height="60" HorizontalAlignment="Center" MinWidth="75" x:Name="AddRuleButton" Click="AddRuleButton_Click">Add Rule</Button>
	</StackPanel>
</UserControl>